#include <iostream>
using namespace std;
 
int main()
{
    unsigned a, b, q=0, r;
 
    cout << "input the 2 numbers "; 
    cin >> a >> b;
 
    while (a >= b)
    {
        a = a - b;
        q++;    // q=q+1;
    }
    r = a;
    cout << "the quotient " << q << endl << "the remainder " << r << endl;
    cin.ignore();
    cin.get();
    return 0;
}







